<!DOCTYPE html>
<html lang="pt-br" data-theme="myheme">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Admin</title>
	<link rel="stylesheet" href="/css/output.css" asp-append-version="true">
	<script src="https://cdn.tailwindcss.com"></script>
	<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
	<link rel="stylesheet" href="~/node_modules/editor.md/css/editormd.min.css">
	<link rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.5.0/github-markdown.min.css"
		integrity="sha512-h/laqMqQKUXxFuu6aLAaSrXYwGYQ7qk4aYCQ+KJwHZMzAGaEoxMM6h8C+haeJTU1V6E9jrSUnjpEzX23OmV/Aw=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />

	@RenderSection("Styles", required: false)
</head>

<body class="bg-base-100">

	<div class="drawer lg:drawer-open">
		<input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
		<div class="drawer-content flex flex-col">
			<!-- Page content here -->
			<main class="flex flex-col h-full w-full p-8 items-center">
				@RenderBody()
			</main>

		</div>
		<div class="drawer-side">
			<label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
			<div class="menu bg-base-200 min-h-full w-56 p-4 flex flex-col h-full justify-between">
				<div class="flex flex-col gap-8">
					<h2 class="text-xl text-center font-bold w-full">Generic Courses</h2>

					<ul class="menu">
						<li><a href="~/admin"> <i class="bi bi-bar-chart"></i> Dashboard</a></li>
						<li>
							<details>
								<summary> <i class="bi bi-camera-video"></i> Cursos</summary>
								<ul>
									<li><a href="~/admin/courses">Listas</a></li>
									<li><a href="~/admin/course/new">Criar novo curso</a></li>
								</ul>
							</details>
						</li>
						<li>
							<details>
								<summary> <i class="bi bi-file-text"></i> Blog</summary>
								<ul>
									<li><a href="~/Admin/posts">Posts</a></li>
									<li><a href="~/Admin/post/new">Criar novo Posts</a></li>
								</ul>
							</details>
						</li>
						<li>
							<details>
								<summary> <i class="bi bi-person"></i> Usuários</summary>
								<ul>
									<li><a href="">Clientes</a></li>
									<li><a href="">Colaboradores</a></li>
								</ul>
							</details>
						</li>
						<li>
							<details>
								<summary> <i class="bi bi-receipt"></i> Planos</summary>
								<ul>
									<li>
										<a href="">Planos</a>
										<a href="">Criar Plano</a>
									</li>
								</ul>
							</details>
						</li>
					</ul>
				</div>

				<details>
					<summary>Configurações</summary>
					<ul>
						<li><a href="">Conta</a></li>
						<li><a href="">Mudar a senha</a></li>
					</ul>
				</details>
			</div>
		</div>
	</div>

	@RenderSection("Scripts", required: false)
</body>
